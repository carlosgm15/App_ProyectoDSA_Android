<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities_dash.Activity_Tienda">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="202dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="166dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/carrito" />

    <Button
        android:id="@+id/buttonBotiquin"
        android:layout_width="29dp"
        android:layout_height="20dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="400dp"
        android:text="50 monedas"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:visibility="visible"
        android:onClick="onButtonBotiquinClick"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:visibility="visible" />

    <Button
        android:id="@+id/buttonBasura"
        android:layout_width="29dp"
        android:layout_height="20dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="400dp"
        android:text="Bolsa Basura"
        android:onClick="onButtonBasuraClick"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonPcr"
        android:layout_width="29dp"
        android:layout_height="20dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="400dp"
        android:text="PCR"
        android:onClick="onButtonPcrClick"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/dinero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="500dp"
        android:layout_marginBottom="107dp"
        android:text="Dinero:"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonPocion"
        android:layout_width="29dp"
        android:layout_height="20dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="400dp"
        android:text="Pocion"
        android:onClick="onButtonPocionClick"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonMascarilla"
        android:layout_width="29dp"
        android:layout_height="20dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="400dp"
        android:text="mascarilla"
        android:onClick="onButtonMascarillaClick"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</RelativeLayout>